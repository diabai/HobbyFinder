<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_create_account"
    android:name="uw.tacoma.edu.hobbyfinder.LogInFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAccountFragment">

    <!--Text view of App title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:ems="20"/>

    <!--First name can enter or take from facebook-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/first_name_hint"
        android:id="@+id/create_name" />

    <!--email can enter or take from facebook-->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:id="@+id/create_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/gender_hint"
        android:id="@+id/create_gender" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hometown_hint"
        android:id="@+id/create_hometown" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/zipcode_hint"
        android:id="@+id/create_zipcode" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radius_prompt"
        android:ems="20"/>

    <!--Drop down for radius-->
    <Spinner
        android:id="@+id/dynamic_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <!--Submit new account button-->
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/add_account_frag_button"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/add_account_text" />
</LinearLayout>
